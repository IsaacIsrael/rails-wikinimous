<%= render 'alert', article: @notice %>
<article>
  <h1>
    <%= @article.title %>
    <small>
      <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_article_path %>
      <%= link_to raw('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'), article_path(@article), method: :delete , data: { confirm: "Are you sure?" } %>
    </small>
  </h1>
  <hr>
  <div>
    <%=@markdown.render(@article.content).html_safe %>
  </div>
</article>
